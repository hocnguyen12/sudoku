/* lightMode.qss */

/* Couleurs */
QWidget {
    background-color: #ffffff;
    color: #000000;
}

QPushButton {
    background-color: #f0f0f0;
    color: #000000;
    border: 1px solid #000000;
}

QPushButton:hover {
    background-color: #dddddd;
}

QComboBox {
    background-color: #f0f0f0;
    color: #000000;
    border: 1px solid #000000;
}

QComboBox::drop-down {
    border: none;
}

QLabel {
    color: #000000;
}

